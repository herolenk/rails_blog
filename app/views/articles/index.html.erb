<h1 class="headerh1">Articles</h1>
 


<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>

    <tr>
      <td><%= article.title %></td>
      <span class="showarticle"><<td><%= article.text %></td></span>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-info' %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', article_path(article) ,
              method: :delete,  
              data:  {  confirm: 'Are you sure?' }, class: 'btn btn-danger'%></td>
    </tr>
  <% end %>
</table>
<div class="container">

 <%= link_to 'Back', articles_path , class: 'btn btn-primary'%>
 <%= link_to 'New article', new_article_path , class: 'btn btn-primary'%>
 </div>